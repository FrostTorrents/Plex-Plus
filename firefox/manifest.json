{
  "manifest_version": 2,
  "name": "Stream Plus",
  "version": "1.3.0",
  "description": "Stream Plus \u2014 set a sleep timer while watching videos on Plex. Includes presets, mute mode, dim screen, skipper, and beta features.",
  "permissions": [
    "storage",
    "https://app.plex.tv/*",
    "activeTab",
    "scripting",
    "https://*.plex.tv/*"
  ],
  "icons": {
    "16": "icons/icon16_v2.png",
    "48": "icons/icon48_v2.png",
    "128": "icons/icon128_v2.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.plex.tv/*",
        "https://*.plex.tv/*"
      ],
      "js": [
        "content.js",
        "skipper.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "streamplus@yourdomain.com",
      "strict_min_version": "109.0"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16_v2.png",
      "48": "icons/icon48_v2.png",
      "128": "icons/icon128_v2.png"
    }
  }
}
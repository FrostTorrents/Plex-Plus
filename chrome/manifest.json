{
  "manifest_version": 3,
  "name": "Stream Plus",
  "version": "1.3.0",
  "description": "Stream Plus â€” set a sleep timer while watching videos on Plex. Includes presets, mute mode, dim screen, skipper, and beta features.",
  "permissions": ["scripting","activeTab","storage"],
  "host_permissions": [
    "https://app.plex.tv/*",
    "https://*.plex.tv/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16_v2.png",
      "48": "icons/icon48_v2.png",
      "128": "icons/icon128_v2.png"
    }
  },
  "icons": {
    "16": "icons/icon16_v2.png",
    "48": "icons/icon48_v2.png",
    "128": "icons/icon128_v2.png"
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": [
      "https://app.plex.tv/*",
      "https://*.plex.tv/*"
    ],
    "js": ["content.js","skipper.js"],
    "run_at": "document_idle",
    "all_frames": true,
    "match_about_blank": true
  }]
}
